<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!-- 配置国际化资源文件 -->
	<constant name="struts.custom.i18n.resources" value="i18n"></constant>
	
	<!-- 文件上传总大小 -->
	<constant name="struts.multipart.maxSize" value="10240000"></constant>

	<package name="testFileUpload" extends="struts-default">
		<!-- 配置拦截器栈的参数 -->
		<interceptors>
			<interceptor-stack name="luodxstack">
				<interceptor-ref name="defaultStack">
					<param name="fileUpload.maximumSize">3000000</param>	<!-- 使用 interceptorName.paramaName配置参数 -->
					<param name="fileUpload.allowedTypes">text/html,text/xml,text/plain</param>
					<param name="fileUpload.allowedExtensions">txt,html,xml,ppt</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="luodxstack"></default-interceptor-ref>
		
		<action name="uploadfiles" class="com.luodexin.strus2.testfileupload.FileUploadAction">
			<result>/success.jsp</result>
			<result name="input">/index.jsp</result>
		</action>
	
	</package>

</struts>

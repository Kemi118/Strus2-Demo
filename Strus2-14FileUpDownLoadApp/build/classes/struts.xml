<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	
	<constant name="struts.multipart.maxSize" value="204800000000"></constant>
	
	<package name="testFileDownload" extends="struts-default">
		<action name="uploadfiles" class="com.luodexin.fileupdownload.action.FileUploadAction">
			<result>/success.jsp</result>
		</action>
		<action name="filedownload" class="com.luodexin.fileupdownload.action.FileDownloadAction">
			<result>filedownload.jsp</result>
		</action>
		<action name="dodownload" class="com.luodexin.fileupdownload.action.DoFiledownloadAction"
			method="execute">
			<result type="stream"></result>
		</action>
	</package>

</struts>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<!-- 
		name: package 的标识 ， 供其它package继承用 
		extends： 继承     一般继承 struts-default 
		namespace: 命名空间 省略为默认值 默认为 / 
	-->
	<package name="helloworld" extends="struts-default" namespace="/">

		<!-- 
			name: action 的唯一标识 
			class: 引用类 默认为 com.opensymphony.xwork2.ActionSupport 
			method： 引用类中的方法 通过方法的返回值寻找action中对应的 result 
			默认为 execute方法 
		-->
		<action name="product-input" class="com.opensymphony.xwork2.ActionSupport"
			method="execute">
			<!-- 
				name: result的标识
				type：方法类型  转发  重定向  等
			 -->
			<result name="success" type="dispatcher">/WEB-INF/pages/input.jsp</result>
		</action>

		<action name="input-save" class="com.luodexin.struts2.beans.Product"
			method="save">
			<result name="details">/WEB-INF/pages/details.jsp</result>
		</action>

	</package>

</struts>

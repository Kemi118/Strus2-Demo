<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>


	<package name="employeeApp" extends="struts-default">

		<!-- 修改 prepareInterceptor 的 alwaysInvokePrepare 为false -->
		<interceptors>
			<interceptor-stack name="employeeStack">
				<interceptor-ref name="paramsPrepareParamsStack">
					<param name="prepare.alwaysInvokePrepare">false</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="employeeStack" />

		<action name="list" class="com.luodexin.employeeapp.EmpAction"
			method="list">
			<result name="success">/list.jsp</result>
		</action>

		<action name="*" class="com.luodexin.employeeapp.EmpAction"
			method="{1}">
			<result name="{1}" type="redirectAction">list</result>
			<result name="edit">/edit.jsp</result>
		</action>

	</package>

</struts>

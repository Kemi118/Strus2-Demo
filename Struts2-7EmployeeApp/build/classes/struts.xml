<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="employeeApp" extends="struts-default" >
		<action name="list" class="com.luodexin.employeeapp.EmpAction" method="list">
		    <result name="success">/list.jsp</result>
		</action>
		
		<action name="*" class="com.luodexin.employeeapp.EmpAction" method="{1}">
		    <result name="{1}" type="redirectAction">list</result>
		    <result name="edit">/edit.jsp</result>
		</action>

	</package>

</struts>
